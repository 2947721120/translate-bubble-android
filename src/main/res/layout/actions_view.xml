<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             style="@style/TranslateActionsContentLight">

    <LinearLayout
            android:id="@+id/content_options"
            style="@style/TranslateContentActionsDisableLight">

        <com.fortysevendeg.translatebubble.ui.components.DisableView
                android:id="@+id/disable"
                style="@style/TranslateActionsDisableLight"/>

        <com.fortysevendeg.translatebubble.ui.components.DisableView
                android:id="@+id/min_15"
                style="@style/TranslateActions30minDisableLight"/>

    </LinearLayout>

    <com.fortysevendeg.translatebubble.ui.components.CloseView
            android:id="@+id/close"
            style="@style/TranslateActionsCloseLight"/>

</FrameLayout>