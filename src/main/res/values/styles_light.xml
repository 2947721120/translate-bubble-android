<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Content View -->

    <style name="TranslateContentLight">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">@dimen/padding_default</item>
        <item name="android:background">@drawable/background_card_light</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="TranslateTitleLight">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">@dimen/margin_default</item>
        <item name="android:textColor">@color/title_content_light</item>
        <item name="android:textSize">@dimen/title_content</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TranslateTextLight">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0px</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/text_content_light</item>
        <item name="android:textSize">@dimen/text_content</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TranslateIconOptionsLight">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/margin_default</item>
        <item name="android:layout_gravity">top|right</item>
        <item name="android:src">@drawable/icon_options_light</item>
    </style>

    <!-- Ations View -->

    <style name="TranslateActionsContentLight">
        <item name="android:background">@drawable/workspace_bg</item>
    </style>

    <style name="TranslateActionsDisableLight">
        <item name="android:layout_width">@dimen/size_disable</item>
        <item name="android:layout_height">@dimen/size_disable</item>
        <item name="android:layout_margin">@dimen/margin_disable</item>
        <item name="android:layout_gravity">right|top</item>
    </style>

    <style name="TranslateActionsCloseLight">
        <item name="android:layout_width">@dimen/size_close</item>
        <item name="android:layout_height">@dimen/size_close</item>
        <item name="android:layout_margin">@dimen/margin_close</item>
        <item name="android:layout_gravity">bottom|center_horizontal</item>
    </style>

</resources>